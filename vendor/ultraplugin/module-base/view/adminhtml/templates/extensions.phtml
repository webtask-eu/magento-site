<?php
/**
 * @var \Ultraplugin\Base\Block\Adminhtml\Extensions $block
 */
$moduleData = $block->getModuleData();
?>
<?php if ($moduleData): ?>
    <div class="ultraplugin-extensions-block">
        <div class="title"><?= $block->escapeHtml('UltraPlugin Extensions') ?></div>
        <div class="description">
            <?php
            $message = 'These are the extensions that will help you enhance your customers ';
            $message .= 'shopping experience and improve your store sales performance.';
            ?>
            <?= $block->escapeHtml($message) ?>
        </div>
        <?php foreach ($moduleData as $data): ?>
            <div class="extension">
                <div class="image">
                    <img src="<?= $block->escapeUrl($data->image_url)?>">
                    <div class="price-box">
                        <?php if ($data->price > $data->special_price): ?>
                            <div class="old-price">
                                <?= $block->escapeHtml($block->getFormattedPrice($data->price)) ?>
                            </div>
                        <?php endif; ?>
                        <div class="price">
                            <?= $block->escapeHtml($block->getFormattedPrice($data->special_price)) ?>
                        </div>
                    </div>
                </div>
                <div class="extension-details">
                    <div class="name">
                        <?= $block->escapeHtml(__($data->title))?>
                    </div>
                    <div class="review-block">
                        <div class="review-count">
                            <strong><?= $block->escapeHtml($data->review_count)?></strong>
                            <?= $block->escapeHtml(' Review(s)') ?>
                        </div>
                        <div class="reviews">
                            <div class="rating" style="width: <?= $block->escapeHtml($data->reviews)?>%"></div>
                        </div>
                    </div>
                    <div class="get-button">
                        <a href="<?= $block->escapeUrl($data->url)?>" class="get-btn" target="_blank">
                            <?= $block->escapeHtml(__('Get it')) ?>
                        </a>
                    </div>
                </div>
            </div>
        <?php endforeach; ?>
    </div>
<?php endif; ?>
