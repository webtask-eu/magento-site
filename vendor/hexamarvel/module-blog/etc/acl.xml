<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="Hexamarvel_Blog::main" title="Hexamarvel Blog" sortOrder="999">
                        <resource id="Hexamarvel_Blog::view_post" title="Posts" sortOrder="10"/>
                        <resource id="Hexamarvel_Blog::view_cat" title="Category" sortOrder="20"/>
                        <resource id="Hexamarvel_Blog::config" title="Configuration" sortOrder="30" />
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
