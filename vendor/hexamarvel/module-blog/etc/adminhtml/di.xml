<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="Hexamarvel\Blog\ImageUpload" type="Hexamarvel\Blog\Model\ImageUploader">
        <arguments>
            <argument name="baseTmpPath" xsi:type="string">hexablog/tmp/images</argument>
            <argument name="basePath" xsi:type="string">hexablog/post/images</argument>
            <argument name="allowedExtensions" xsi:type="array">
                <item name="jpg" xsi:type="string">jpg</item>
                <item name="jpeg" xsi:type="string">jpeg</item>
                <item name="gif" xsi:type="string">gif</item>
                <item name="png" xsi:type="string">png</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Hexamarvel\Blog\Controller\Adminhtml\Post\Upload">
        <arguments>
            <argument name="imageUploader" xsi:type="object">Hexamarvel\Blog\ImageUpload</argument>
        </arguments>
    </type>
    <type name="Hexamarvel\Blog\Controller\Adminhtml\Post\UploadThumbnail">
        <arguments>
            <argument name="imageUploader" xsi:type="object">Hexamarvel\Blog\ImageUpload</argument>
        </arguments>
    </type>
</config>
