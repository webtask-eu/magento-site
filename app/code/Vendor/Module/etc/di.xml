<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- Существующая конфигурация для File Uploader -->
    <type name="Magento\Framework\File\Uploader">
        <arguments>
            <argument name="extensions" xsi:type="array">
                <item name="allowed" xsi:type="array">
                    <item name="jpg" xsi:type="string">image/jpeg</item>
                    <item name="JPG" xsi:type="string">image/jpeg</item>
                    <item name="jpeg" xsi:type="string">image/jpeg</item>
                    <item name="JPEG" xsi:type="string">image/jpeg</item>
                    <item name="png" xsi:type="string">image/png</item>
                    <item name="PNG" xsi:type="string">image/png</item>
                    <item name="gif" xsi:type="string">image/gif</item>
                    <item name="GIF" xsi:type="string">image/gif</item>
                </item>
            </argument>
        </arguments>
    </type>

    <!-- Новый плагин для группированных продуктов -->
    <type name="Magento\Catalog\Block\Product\AbstractProduct">
        <plugin name="vendor_module_grouped_product_price" type="Vendor\Module\Plugin\GroupedProductPricePlugin" sortOrder="10"/>
    </type>

    <type name="Magento\Catalog\Block\Product\ListProduct">
        <plugin name="vendor_module_grouped_product_price" type="Vendor\Module\Plugin\GroupedProductPricePlugin" sortOrder="10"/>
    </type>


</config>
